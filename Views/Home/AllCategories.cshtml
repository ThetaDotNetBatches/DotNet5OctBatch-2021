@model IEnumerable<DotNet5OctBatch_2021.Models.ItemCategory>

@{
    ViewData["Title"] = "AllCategories";
}
<link href="~/css/site.css" rel="stylesheet" />
@*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.css" />*@
<link href="~/css/jquery.dataTables.css" rel="stylesheet" />
<h1>AllCategories</h1>
@if (ViewBag.SMeesage != null)
{
    <div class="alert alert-success">@ViewBag.SMeesage</div>
}
else if (ViewBag.EMessage != null)
{
    <div class="alert alert-warning">@ViewBag.EMessage</div>
}
<p>
    <a asp-action="AddCategory" class="btn btn-primary btn-sm">Create New</a>
</p>
<table class="table table-bordered table-hover table-responsive text-nowrap" id="catg-tbl">
    <thead>
        <tr class="bg-primary">
            <th>
                Catgeory Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatSerial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <strong>@item.CatName</strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatSerial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifyBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatLevel)
                </td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a> |
                    <a asp-action="DetailCategory" asp-route-id="@item.Id" class="btn btn-success btn-sm">Details</a> |
                    <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    @*<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.js"></script>*@
    @*<script src="C:\Users\Touba\.nuget\packages\datatables.net-dt\1.11.3\contentFiles\any\any\wwwroot\js\dataTables.dataTables.min.js"></script>*@
    <script type="text/javascript" src="~/js/JavaScript.js"></script>
    <script>
        $(document).ready(function () {
            $("#catg-tbl").DataTable({
                       sorting:false,
            });

        });
    </script>
}
